<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="bd2.model">
	<class name="Cursada" table="cursada">
		<id name="id" column="id_cursada">
			<generator class="native"/>
		</id>
		
		<property name="inicio" column="inicio" type="date"/>
        
		<many-to-one
			name="usuario"
			column="id_usuario"
			unique="true"
			not-null="true"
			cascade="all"
			class="Usuario">
		</many-to-one>
		
		<many-to-one
			name="curso"
			column="id_curso"
			unique="true"
			not-null="true"
			cascade="all"
			class="Curso">
		</many-to-one>
		
		<list name="pruebas" cascade="all">
			<key column="id_cursada"/>
			<list-index column="id_cursada_prueba"/>
			<one-to-many class="Prueba"/>
		</list>
		
	</class>
	
</hibernate-mapping>
