<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="bd2.model">
	<class name="Documento" table="documento">
		<id name="id" column="id_documento">
			<generator class="native"/>
		</id>
		
		<property name="nombre" column="nombre_documento" type="string"/>
		<property name="complejidad" column="complejidad_documento" type="int"/>
		<many-to-one 
			name="idioma" 
        	column="id_idioma" 
        	not-null="true"
		/>
        
        <list name="parrafos" cascade="all" inverse="true">
			<key column="id_documento"/>
			<list-index column="list_index_parrafo_documento"/>
			<one-to-many class="Parrafo"/>
		</list>
		
	</class>
</hibernate-mapping>