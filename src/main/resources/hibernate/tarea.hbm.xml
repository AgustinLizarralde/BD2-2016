<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="bd2.model">
	<class name="Tarea" table="tarea">
		<id name="id" column="id_tarea">
			<generator class="native"/>
		</id>
		
		<property name="fecha" column="fecha_tarea" type="date"/>
		<property name="descripcion" column="descripcion_tarea" type="string"/>
		<property name="completa" column="completa" type="boolean"/>
		
		<discriminator column="tipo_tarea" type="string"/>
		
		<subclass name="Traduccion" discriminator-value="traduccion">
			<many-to-one 
				name="idioma"
				column="id_idioma"
				unique="true"
				not-null="true"
			/>
			
			<many-to-one 
				name="parrafo"
				column="id_parrafo"
				unique="true"
				not-null="true"
			/>
			
			<property name="texto" column="texto" type="text"/>
			
		</subclass>
		
		<subclass name="Evaluacion" discriminator-value="evaluacion">
			<property name="puntaje" column="puntaje" type="integer"/>
			<many-to-one 
				name="traduccion"
				column="id_tarea"
				unique="true"
				not-null="true"
			/>			
		</subclass>
		
	</class>
</hibernate-mapping>